/* 最外层标签 */
page{
  height: 100%;
  background-color: #b3d4db;
}

/* 变为弹性盒子模型 */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 用户头像 */
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

/* 用户名字 */
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 用户登录边框 */
.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

/* 用户登录按钮 */
.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
